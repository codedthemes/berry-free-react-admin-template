{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "baseUrl": "app",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": ["app/**/*"],
  "exclude": ["node_modules"]
}
